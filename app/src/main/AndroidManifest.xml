<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="polirats.ratstats">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:fullBackupOnly="false"
        android:icon="@mipmap/rats_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/rats_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NovoJogador"
            android:configChanges="orientation|keyboardHidden"
            android:label="Registrar Jogador"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NovaPartida"
            android:configChanges="orientation|keyboardHidden"
            android:label="Começar Partida"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NovaJogada"
            android:configChanges="orientation|keyboardHidden"
            android:label="Nova Jogada"
            android:screenOrientation="landscape" />
        <activity
            android:name=".NovaCorrida"
            android:configChanges="orientation|keyboardHidden"
            android:label="Nova Corrida"
            android:screenOrientation="landscape" />
        <activity
            android:name=".NovoPasse"
            android:configChanges="orientation|keyboardHidden"
            android:label="Novo Passe"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".NovoSack"
            android:configChanges="orientation|keyboardHidden"
            android:label="Novo Sack"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".NovoBadSnap"
            android:configChanges="orientation|keyboardHidden"
            android:label="Novo Bad Snap"
            android:screenOrientation="landscape"/>
        <activity android:name=".NovoST" />
        <activity
            android:name=".NovaFalta"
            android:configChanges="orientation|keyboardHidden"
            android:label="Nova Falta"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NovoDrive"
            android:configChanges="orientation|keyboardHidden"
            android:label="Novo Drive"
            android:screenOrientation="landscape" />
        <activity android:name=".ApagarJogador" />
        <activity android:name=".SheetsExample" />
        <activity android:name=".ExportarDados" />
        <activity android:name=".ExportarArquivos" />
        <activity
            android:name=".AjustarGameSituation"
            android:label="Ajustar Situação de Jogo" />
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rats_background"
    tools:context=".NovaFalta">

    <TextView
        android:id="@+id/textDownDistance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/darkYellow"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/ratsBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="1.0" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteFalta"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="Falta"
        android:textColor="@color/lightGrey"
        android:textColorHint="@color/lightYellow"
        app:layout_constraintBottom_toBottomOf="@+id/toggleUnidade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toEndOf="@+id/toggleUnidade"
        app:layout_constraintTop_toTopOf="@+id/toggleUnidade"
        app:layout_constraintVertical_bias="1.0" />

    <ToggleButton
        android:id="@+id/toggleUnidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="ToggleButton"
        android:textOff="Defesa"
        android:textOn="Ataque"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/xButton"
        android:layout_width="40dp"
        android:layout_height="39dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:background="@color/transparent"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cButton"
        app:srcCompat="@drawable/botao_x2" />

    <ImageButton
        android:id="@+id/rButton"
        android:layout_width="40dp"
        android:layout_height="39dp"
        android:layout_marginStart="56dp"
        android:adjustViewBounds="true"
        android:background="@color/transparent"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xButton"
        app:srcCompat="@drawable/botao_r" />

    <ImageButton
        android:id="@+id/lgButton"
        android:layout_width="40dp"
        android:layout_height="39dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:background="@color/transparent"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/cButton"
        app:layout_constraintTop_toTopOf="@+id/cButton"
        app:srcCompat="@drawable/botao_lg" />

    <ImageButton
        android:id="@+id/cButton"
        android:layout_width="40dp"
        android:layout_height="39dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:background="@color/transparent"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSelecioneJogadores"
        app:srcCompat="@drawable/botao_c" />

    <ImageButton
        android:id="@+id/rgButton"
        android:layout_width="40dp"
        android:layout_height="39dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:background="@color/transparent"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/cButton"
        app:layout_constraintTop_toTopOf="@+id/cButton"
        app:srcCompat="@drawable/botao_rg" />

    <ImageButton
        android:id="@+id/qbButton"
        android:layout_width="40dp"
        android:layout_height="39dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:adjustViewBounds="true"
        android:background="@color/transparent"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cButton"
        app:srcCompat="@drawable/botao_qb" />

    <ImageButton
        android:id="@+id/yButton"
        android:layout_width="40dp"
        android:layout_height="39dp"
        android:layout_marginEnd="56dp"
        android:adjustViewBounds="true"
        android:background="@color/transparent"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zButton"
        app:srcCompat="@drawable/botao_y" />

    <ImageButton
        android:id="@+id/zButton"
        android:layout_width="40dp"
        android:layout_height="39dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:background="@color/transparent"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cButton"
        app:srcCompat="@drawable/botao_z" />

    <TextView
        android:id="@+id/textRG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="RG"
        android:textColor="@color/ratsYellow"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/rgButton"
        app:layout_constraintStart_toStartOf="@+id/rgButton"
        app:layout_constraintTop_toBottomOf="@+id/rgButton" />

    <TextView
        android:id="@+id/textZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Z"
        android:textColor="@color/ratsYellow"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/zButton"
        app:layout_constraintStart_toStartOf="@+id/zButton"
        app:layout_constraintTop_toBottomOf="@+id/zButton" />

    <TextView
        android:id="@+id/textY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Y"
        android:textColor="@color/ratsYellow"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/yButton"
        app:layout_constraintStart_toStartOf="@+id/yButton"
        app:layout_constraintTop_toBottomOf="@+id/yButton" />

    <TextView
        android:id="@+id/textC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="C"
        android:textColor="@color/ratsYellow"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/cButton"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@+id/cButton"
        app:layout_constraintTop_toBottomOf="@+id/cButton" />

    <TextView
        android:id="@+id/textQB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="QB"
        android:textColor="@color/ratsYellow"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/qbButton"
        app:layout_constraintStart_toStartOf="@+id/qbButton"
        app:layout_constraintTop_toBottomOf="@+id/qbButton" />

    <TextView
        android:id="@+id/textLG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="LG"
        android:textColor="@color/ratsYellow"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/lgButton"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="@+id/lgButton"
        app:layout_constraintTop_toBottomOf="@+id/lgButton" />

    <TextView
        android:id="@+id/textR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="R"
        android:textColor="@color/ratsYellow"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/rButton"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="@+id/rButton"
        app:layout_constraintTop_toBottomOf="@+id/rButton" />

    <TextView
        android:id="@+id/textX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="X"
        android:textColor="@color/ratsYellow"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/xButton"
        app:layout_constraintHorizontal_bias="0.291"
        app:layout_constraintStart_toStartOf="@+id/xButton"
        app:layout_constraintTop_toBottomOf="@+id/xButton" />

    <EditText
        android:id="@+id/editJds"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Jardas"
        android:inputType="numberSigned|numberDecimal"
        android:textColor="@color/lightGrey"
        android:textColorHint="@color/lightYellow"
        app:layout_constraintEnd_toEndOf="@+id/autoCompleteFalta"
        app:layout_constraintStart_toStartOf="@+id/autoCompleteFalta"
        app:layout_constraintTop_toBottomOf="@+id/autoCompleteFalta" />

    <TextView
        android:id="@+id/textSelecioneJogadores"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/darkYellow"
        android:gravity="center"
        android:text="Selecione quem fez ou recebeu a falta (ou -time-)"
        android:textColor="@color/ratsBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editJds"
        app:layout_constraintWidth_percent="1.0" />

    <Switch
        android:id="@+id/switchTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="68dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="Time "
        android:textColor="@color/ratsYellow"
        app:layout_constraintEnd_toStartOf="@+id/qbButton"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textR" />

    <Button
        android:id="@+id/registrarFaltaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Registrar Falta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/switchSafety"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Safety "
        android:textColor="@color/ratsYellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleUnidade" />

</android.support.constraint.ConstraintLayout>